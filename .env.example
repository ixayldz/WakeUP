# Sunucu Ayarları
PORT=3000
NODE_ENV=development

# MongoDB Bağlantısı
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wakeup?retryWrites=true&w=majority

# JWT Ayarları
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=7d
JWT_COOKIE_EXPIRE=7

# AWS S3 Ayarları
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_BUCKET_NAME=wakeup-uploads

# Redis Ayarları
REDIS_URL=redis://localhost:6379

# Email Ayarları
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_app_password

# Client URL
CLIENT_URL=http://localhost:3000

# WebSocket Ayarları
WS_PORT=3001

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# Dosya Upload Limitleri
MAX_FILE_SIZE=5242880 # 5MB
MAX_AUDIO_DURATION=20 # saniye

# Güvenlik
CORS_ORIGIN=http://localhost:3000
CORS_METHODS=GET,HEAD,PUT,PATCH,POST,DELETE
CORS_CREDENTIALS=true

# Cache Ayarları
CACHE_TTL=3600 # saniye

# Bildirim Ayarları
NOTIFICATION_CLEANUP_INTERVAL=86400 # 24 saat
NOTIFICATION_MAX_AGE=2592000 # 30 gün

# FFmpeg Ayarları
FFMPEG_PATH=/usr/local/bin/ffmpeg
FFPROBE_PATH=/usr/local/bin/ffprobe

# Moderasyon Ayarları
MODERATION_AUTO_DELETE=false
MODERATION_MIN_REPORTS=5

# Loglama
LOG_LEVEL=debug
LOG_FORMAT=combined

# API Versiyonu
API_VERSION=v1

# Depolama Limitleri
FREE_STORAGE_LIMIT=1073741824 # 1GB
PREMIUM_STORAGE_LIMIT=53687091200 # 50GB

# Ses İşleme
AUDIO_BITRATE=128k
AUDIO_CHANNELS=2
AUDIO_SAMPLE_RATE=44100

# İşbirliği Ayarları
MAX_COLLABORATION_PARTICIPANTS=5
COLLABORATION_TIMEOUT=86400 # 24 saat 